<div class="profile-container">
    <div class="card profile-card">
        <div class="profile-header">
            <div class="profile-avatar">
                <%= locals.user.name.charAt(0).toUpperCase() %>
            </div>
            
            <% if (locals.success) { %>
                <div class="alert alert-success" style="margin: 10px 0; padding: 10px; background: #d1f7c4; color: #0e6245; border-radius: 4px;">
                    <i class="fas fa-check"></i> <%= locals.success %>
                </div>
            <% } %>
            
            <% if (locals.error) { %>
                <div class="alert alert-error" style="margin: 10px 0; padding: 10px; background: #f7c4c4; color: #620e0e; border-radius: 4px;">
                    <i class="fas fa-exclamation"></i> <%= locals.error %>
                </div>
            <% } %>
            
            <h2><%= locals.user.name %></h2>
            <div class="profile-role">
                <%= locals.user.role %>
            </div>
        </div>
        
        <div class="profile-details">
            <div class="detail-item">
                <strong>Email:</strong> <%= locals.user.email %>
            </div>
            <div class="detail-item">
                <strong>Роль:</strong> <%= locals.user.role %>
            </div>
        </div>
        
        <!-- ФОРМА ИЗМЕНЕНИЯ ИМЕНИ -->
        <div class="profile-edit-form" style="margin-top: 20px; padding: 15px; border: 1px solid #e0e0e0; border-radius: 8px;">
            <h3 style="margin-bottom: 15px;">Изменить имя:</h3>
            <form method="POST" action="/profile/update" style="display: flex; gap: 10px; align-items: center;">
                <input 
                    type="text" 
                    name="name" 
                    value="<%= locals.user.name %>"
                    required
                    class="input-group"
                >
                <button 
                    type="submit" class="btn-profile"
                >
                    Сохранить
                </button>
            </form>
        </div>
        
        
        <div  class="profile-actions" >
            <% if (locals.user.role === 'Админ') { %>
                <a href="/admin" class="btn-profile" >
                    </i> Админ-панель
                </a>
            <% } %>
            
            <a href="/logout" class="btn-profile">
                Выйти
            </a>
        </div>
    </div>
</div>